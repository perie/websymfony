{% extends 'HBBlogBundle::layout.html.twig' %}

{% block titre_content %} Utilisateurs {% endblock %}
{% block content -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            Listes des utilisateurs
        </div>
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>NOM Prénom</th>
                        <th>Adresse Email</th>
                        <th>Login / Pseudo</th>
                        <th>Date de naissance</th>
                        <th>Ajouté le</th>
                        <th>Modifié le</th>
                        <th>Activé</th>
                        <th>   
                            <a href="{{ path('user_new')}}" class="btn btn-social btn-adn btn-bg" title="Ajouter lun utilisateur">
                                <i class="fa fa-plus "></i>Ajouter
                            </a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.email }}</td>
                        <td>{{ entity.login }}</td>
                        <td>{% if entity.birthDate %}{{ entity.birthDate|date('d/m/Y')  }}{% endif %}</td>
                        <td>{% if entity.creationDate %}{{ entity.creationDate|date('d/m/Y') }}{% endif %}</td>
                        <td>{% if entity.lastEditDate %}{{ entity.lastEditDate|date('d/m/Y') }}{% endif %}</td>
                        <td><i class=" {% if (entity.enabled == true) %}ion-android-checkbox-outline{% else %} ion-android-checkbox-outline-blank{% endif%}"/></td>
                        <td>
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path('user_show', { 'id': entity.id }) }}" class="btn btn-block btn-social-icon btn-github" title="Visualiser l'utilisateur">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-block btn-social-icon btn-dropbox" title="Modifier l'utilisateur">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
        <ul>
        <li class="list-unstyled">
            <a href="{{ path('user_new')}}" class="btn btn-social btn-reddit btn-bg" title="Ajouter un utilisateur">
                <i class="fa fa-plus "></i>Ajouter un nouvel utilisateur
            </a>
        </li>
    </ul>
    {% endblock %}
